<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/smartgroup_backend_java</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">novasenha</property>

        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.connection.autocommit">false</property>
        
        <mapping class="com.smartgroup.backend.bean.Comentario"/>
        <mapping class="com.smartgroup.backend.bean.Enquete"/>
        <mapping class="com.smartgroup.backend.bean.Opcao"/>
        <mapping class="com.smartgroup.backend.bean.Usuario"/>
        <mapping class="com.smartgroup.backend.bean.Voto"/>
        <mapping class="com.smartgroup.backend.bean.VotoOpcao"/>

    </session-factory>
</hibernate-configuration>